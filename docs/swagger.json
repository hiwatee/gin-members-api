{
    "swagger": "2.0",
    "info": {
        "description": "メンバーズAPI",
        "title": "メンバーズAPI",
        "termsOfService": "https://github.com/hiwatee/gin-members-api",
        "contact": {
            "name": "hiwatee",
            "url": "https://github.com/hiwatee",
            "email": "tochika.biz@gmail.com"
        },
        "license": {
            "name": "Apache 2.0",
            "url": "http://www.apache.org/licenses/LICENSE-2.0.html"
        },
        "version": "1.0"
    },
    "host": "localhost:8000",
    "basePath": "/api/v1",
    "paths": {
        "/registration": {
            "post": {
                "description": "ユーザー新規登録API",
                "parameters": [
                    {
                        "description": "User Create Request",
                        "name": "body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/controllers.UserCreateRequest"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/controllers.UserResponse"
                        }
                    }
                }
            }
        },
        "/users": {
            "get": {
                "description": "ユーザー一覧取得API",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/controllers.UserResponse"
                        }
                    }
                }
            }
        },
        "/users/{id}": {
            "get": {
                "description": "ユーザー詳細情報API",
                "parameters": [
                    {
                        "type": "string",
                        "description": "The key for user",
                        "name": "id",
                        "in": "path",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/controllers.UserResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "controllers.UserCreateRequest": {
            "type": "object",
            "properties": {
                "email": {
                    "type": "string",
                    "example": "info@example.com"
                },
                "password": {
                    "type": "string",
                    "example": "password2021"
                }
            }
        },
        "controllers.UserResponse": {
            "type": "object",
            "properties": {
                "createdAt": {
                    "type": "string",
                    "example": "2021-01-10T15:42:36+09:00"
                },
                "email": {
                    "type": "string",
                    "example": "info@example.com"
                },
                "id": {
                    "type": "integer",
                    "example": 1
                },
                "updatedAt": {
                    "type": "string",
                    "example": "2021-01-10T15:42:36+09:00"
                }
            }
        }
    }
}